<!DOCTYPE html>
<html>
  <head>
    <title>First_App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-inverse bg-dark">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'Page one', pages_one_path, {class: 'nav-link'} %>
          </li>
          <li class="nav-item">
            <%= link_to 'Page two', pages_two_path, {class: 'nav-link'} %>
          </li>
          <li class="nav-item">
            <%= link_to 'Page Three', pages_three_path, {class: 'nav-link'} %>
          </li>
        </ul>
      </div>
    </nav>



    <%= yield %>
  </body>
</html>
